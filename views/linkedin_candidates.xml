<odoo>
    <!-- AcciÃ³n para mostrar la vista de candidatos -->
    <record id="action_linkedin_candidates" model="ir.actions.act_window">
        <field name="name">LinkedIn Candidates</field>
        <field name="res_model">linkedin.candidate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista de lista de candidatos -->
    <record id="view_linkedin_candidate_tree" model="ir.ui.view">
        <field name="name">linkedin.candidate.tree</field>
        <field name="model">linkedin.candidate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="profile_url"/>
                <field name="resume"/>
            </tree>
        </field>
    </record>

    <record id="action_linkedin_candidate" model="ir.actions.act_window">
        <field name="name">Candidatos LinkedIn3</field>
        <field name="res_model">linkedin.candidate</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <button name="action_linkedin_auth" string="Conectar con LinkedIn" type="object" class="oe_highlight"/>
            </p>
        </field>
    </record>

